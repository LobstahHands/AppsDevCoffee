@model OriginType
@{
    ViewData["Title"] = "Update Inventory";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="UpdateInventory" method="post">
    <input type="hidden" asp-for="OriginTypeId" />
    <div class="form-group">
        <label asp-for="Country" class="control-label"></label>
        <input asp-for="Country" class="form-control" />
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SupplierNotes" class="control-label"></label>
        <input asp-for="SupplierNotes" class="form-control" />
        <span asp-validation-for="SupplierNotes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RoasterNotes" class="control-label"></label>
        <input asp-for="RoasterNotes" class="form-control" />
        <span asp-validation-for="RoasterNotes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CostPerOz" class="control-label"></label>
        <input asp-for="CostPerOz" class="form-control" />
        <span asp-validation-for="CostPerOz" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
<div class="mt-4">
    <a asp-controller="Inventory" asp-action="InventoryList" class="btn btn-primary">Cancel</a>
</div>