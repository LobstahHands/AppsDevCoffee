@{
    // Retrieve total cost and order ID from ViewBag
    var totalCost = ViewBag.TotalCost;
    var orderId = ViewBag.OrderId;
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card mt-5">
                <div class="card-body">
                    <h5 class="card-title">Payment Details</h5>
                    <p class="card-text">Your total is $@totalCost. Please follow the PayPal or Venmo link below and send the payment with your order ID: @orderId in the transaction description.</p>
                    <div class="btn-group" role="group">
                        <a href="https://www.paypal.com?orderId=@orderId&totalCost=@totalCost" class="btn" style="background-color: #001f3f; color: #ffffff; border-color: #001f3f;">Pay with PayPal</a>
                        <a href="https://www.venmo.com?orderId=@orderId&totalCost=@totalCost" class="btn btn-info text-white">Pay with Venmo</a>
                    </div>
                    <p class="mt-3">You can also choose to pay later.</p>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Pay Later</a>
                </div>
            </div>
        </div>
    </div>
</div>
