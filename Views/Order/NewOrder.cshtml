@model NewOrderViewModel

<h1>New Order</h1>

<form asp-action="NewOrder">
    <div class="form-group">
        <label for="coffeeSelect">Select Coffee:</label>
        <select class="form-control" id="coffeeSelect" name="coffeeId">
            @foreach (var coffee in ViewBag.AvailableCoffees)
            {
                <option value="@coffee.OriginTypeId">@coffee.Country - @coffee.SupplierNotes. </option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Quantity">Quantity:</label>
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="Quantity" value="8" required>
            <label class="form-check-label" asp-for="Quantity" for="quantity8">
                8
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="Quantity" value="15">
            <label class="form-check-label" asp-for="Quantity" for="quantity15">
                15
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="Quantity" value="28">
            <label class="form-check-label" asp-for="Quantity" for="quantity28">
                28
            </label>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Create Order</button>
</form>
