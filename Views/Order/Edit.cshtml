@model Order

@{
    ViewData["Title"] = "Edit/Add Order";
}

<div class="container py-4">
    <h1 class="mb-4">Edit/Add Order</h1>

    <form asp-action="Edit" class="mx-auto">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="UserId" class="control-label"></label>
            <input asp-for="UserId" class="form-control" />
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="OrderDate" class="control-label"></label>
            <input asp-for="OrderDate" class="form-control" type="date" />
            <span asp-validation-for="OrderDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SubtotalCost" class="control-label"></label>
            <input asp-for="SubtotalCost" class="form-control" />
            <span asp-validation-for="SubtotalCost" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PriceAdjustment" class="control-label"></label>
            <input asp-for="PriceAdjustment" class="form-control" />
            <span asp-validation-for="PriceAdjustment" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TotalCost" class="control-label"></label>
            <input asp-for="TotalCost" class="form-control" />
            <span asp-validation-for="TotalCost" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TotalPaid" class="control-label"></label>
            <input asp-for="TotalPaid" class="form-control" />
            <span asp-validation-for="TotalPaid" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PaidDate" class="control-label"></label>
            <input asp-for="PaidDate" class="form-control" type="date" />
            <span asp-validation-for="PaidDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="OrderStatus" class="control-label"></label>
            <select asp-for="OrderStatus" class="form-control">
                <option value="Awaiting Roaster" selected>Awaiting Roaster</option>
                <option value="Roasted">Roasted</option>
                <option value="Roasted and Delivered">and Delivered</option>
            </select>
            <span asp-validation-for="OrderStatus" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" asp-controller="Order" class="btn btn-primary">Cancel</a>
        </div>
        <div class="form-group mt-1">
            
        </div>
    </form>
</div>
