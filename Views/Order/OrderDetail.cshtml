@model AppsDevCoffee.Models.Order

<h1>Order Details</h1>

<div>
    <h4>Order ID: @Model.Id</h4>
    <p>User ID: @Model.UserId</p>
    <p>Total Paid: @Model.TotalPaid</p>
    <p>Order Date: @Model.OrderDate</p>
    <p>Paid Date: @Model.PaidDate</p>
</div>

<hr />

<h3>Order Items</h3>

@if (Model.OrderItems.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Item ID</th>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Total Cost</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var orderItem in Model.OrderItems)
            {
                <tr>
                    <td>@orderItem.OrderItemId</td>
                    <td>@orderItem.OriginType.Country</td>
                    <td>@orderItem.OzQuantity</td>
                    <td>@orderItem.Subtotal</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No order items found for this order.</p>
}
