@model IEnumerable<User>
@{
    ViewData["Title"] = "Pending User List";
}
<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>User ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Username</th>
            <th>DateAdded</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Username</td>
                    <td>@user.DateAdded.ToShortDateString()</td> 
                    
                    <td>
                        <form asp-action="PendingUserList" method="post">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-primary">Confirm</button>
                        </form>
                        <form asp-action="DeletePendingUser" method="post">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-primary">Deny</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <p>No pending orders found.</p>
        }
       
    </tbody>
</table>
