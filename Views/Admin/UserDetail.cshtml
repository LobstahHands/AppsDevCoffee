@model AppsDevCoffee.Models.User

@{
    ViewData["Title"] = "User Detail";
}

<h1>User Detail</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">User Type</dt>
        <dd class="col-sm-10">@Model.UserType.Description</dd>

        <dt class="col-sm-2">Username</dt>
        <dd class="col-sm-10">@Model.Username</dd>

        <dt class="col-sm-2">Active</dt>
        <dd class="col-sm-10">@Model.UserStatus</dd>

        <dt class="col-sm-2">Date Added</dt>
        <dd class="col-sm-10">@Model.DateAdded</dd>
    </dl>
</div>

<div>
    <a class="btn btn-primary" href="@Url.Action("EditUser", "Admin", new { id = Model.Id })">Edit</a>
    <form asp-action="DeleteUser" method="post" style="display: inline;">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
    </form>
    <a class="btn btn-primary" href="@Url.Action("UserList", "Admin")">Cancel</a>
</div>
