@model IEnumerable<Order>


<h1>Pending Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User ID</th>
            <th>Total Cost</th>
            <th>Total Paid</th>
            <th>Order Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.UserId</td>
                    <td>@order.TotalCost</td>
                    <td>@order.TotalPaid</td>
                    <td>@order.OrderDate</td>
                    <td>
                        <form asp-action="PendingOrders" method="post">
                            <input type="hidden" name="orderId" value="@order.Id" />
                            <button type="submit" class="btn btn-primary">Fill Order</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <p>No pending orders found.</p>
        }
       
    </tbody>
</table>
