@model List<Order>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section pageTitle {
    <title>Order List</title>
}

@section content {
    <h1>Order List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>User ID</th>
                <th>Total Paid</th>
                <th>Order Date</th>
                <th>Paid Date</th>
                <th>Subtotal Cost</th>
                <th>Price Adjustment</th>
                <th>Total Cost</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.UserId</td>
                    <td>@order.TotalPaid</td>
                    <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
                    <td>@(order.PaidDate.HasValue ? order.PaidDate.Value.ToString("MM/dd/yyyy") : "-")</td>
                    <td>@order.SubtotalCost</td>
                    <td>@order.PriceAdjustment</td>
                    <td>@order.TotalCost</td>
                </tr>
            }
        </tbody>
    </table>
}
