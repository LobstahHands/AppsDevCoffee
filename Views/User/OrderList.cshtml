@model List<Order>

<h1 class="display-4">Order page!</h1>

<div class="container mt-5">
    <h2>User Orders</h2>

    @if (Model != null && Model.Count > 0)
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Roast Description</th>
                    <th>Quantity</th>
                    <th>Total Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderId</td>
                        <td>@order.RoastDescription</td>
                        <td>@order.Quantity</td>
                        <td>@order.TotalPrice</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No orders available for this user.</p>
    }
</div>